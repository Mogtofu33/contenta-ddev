version: '3.6'

services:
  front_vue:
    container_name: ddev-${DDEV_SITENAME}-front_vue
    image: node:dubnium-alpine
    ports:
      - 3000
    links:
      - web:contenta.ddev.local
    volumes:
      - ../contenta_vue_nuxt:/home/node/app
    working_dir: /home/node/app
    user: "node"
    # Install from the service and start.
    command: sh -c 'npm install && npm run dev'
    # Install locally or already installed, just start.
    #command: npm run dev
    labels:
      com.ddev.site-name: ${DDEV_SITENAME}
      com.ddev.approot: $DDEV_APPROOT
      com.ddev.app-url: $DDEV_URL
    environment:
      - VIRTUAL_HOST=front-vue.ddev.local
      - HTTP_EXPOSE=80:3000
